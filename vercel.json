{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "pnpm run build",
    "installCommand": "pnpm install",
    "framework": "astro",
    "cacheEnabled": true,
    "regions": [
        "hkg1"
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        },
        {
            "source": "/pagefind/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/_astro/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}