---
import { type CollectionEntry, getCollection } from "astro:content";
import PostPreview from "@/components/blog/PostPreview.astro";
import Note from "@/components/note/Note.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";
export const prerender = true;

// Posts
const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Notes
const MAX_NOTES = 0;
const allNotes = await getCollection("note");
const latestNotes = allNotes.sort(collectionDateSort).slice(0, MAX_NOTES);
---

<PageLayout meta={{ title: "主页" }}>
	<!-- Posts Section -->
	<section aria-label="Blog post list">
		<!-- Ornate section header -->
		<div class="mb-8 flex items-center gap-4">
			<span class="ornate-divider flex-1"></span>
			<span class="font-display text-xs font-medium uppercase tracking-[0.25em] text-accent engraved">
				最近文章
			</span>
			<span class="ornate-divider flex-1"></span>
		</div>
		
		<ul class="space-y-4" role="list">
			{
				allPostsByDate.map((p) => (
					<li class="group grid gap-4 border-b border-border pb-4 last:border-0 sm:grid-cols-[auto_1fr] transition-colors duration-300 hover:border-accent/30">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
		
		<div class="mt-8 flex justify-end">
			<a class="group relative flex items-center gap-2 font-heading text-lg italic text-accent transition-all duration-300 hover:text-accent-2 hover:tracking-wide" href="/posts/">
				更多文章...
				<span class="chicken-text group-hover:opacity-100 opacity-0 transition-opacity">I don't think you want to see more</span>
			</a>
		</div>
	</section>

	{
		latestNotes.length > 0 && (
			<section class="mt-24">
				<div class="mb-12 flex items-center gap-4">
					<span class="ornate-divider flex-1"></span>
					<span class="font-display text-xs font-medium uppercase tracking-[0.25em] text-accent engraved">
						笔记
					</span>
					<span class="ornate-divider flex-1"></span>
				</div>
				<ul class="space-y-4" role="list">
					{latestNotes.map((note) => (
						<li>
							<Note note={note} as="h3" isPreview />
						</li>
					))}
				</ul>
			</section>
		)
	}
</PageLayout>
