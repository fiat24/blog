---
import PageLayout from "@/layouts/Base.astro";
export const prerender = true;

const meta = {
	description: "Oops! It looks like this page is lost in space!",
	title: "Oops! You found a missing page!",
};
---

<PageLayout meta={meta}>
	<div class="flex min-h-[60vh] flex-col items-center justify-center text-center">
		<!-- Ornate 404 card -->
		<div class="ornate-frame rounded border border-border bg-bgAlt p-12 max-w-md">
			<h1 class="font-heading text-7xl font-normal text-accent leading-none mb-4 engraved">404</h1>
			<div class="ornate-divider mb-6" aria-hidden="true"></div>
			<p class="font-body text-lg text-mutedFg mb-6">
				这里什么也没有！
			</p>
			<p class="font-display text-[10px] uppercase tracking-[0.3em] text-mutedFg/60 mb-8">
				The page you seek has been lost to the ages
			</p>
			<a
				href="/"
				class="btn-brass inline-block px-8 py-3 font-display text-xs uppercase tracking-[0.15em] engraved"
			>
				Return Home
			</a>
		</div>
	</div>
</PageLayout>
