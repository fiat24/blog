---
import { type CollectionEntry, render } from "astro:content";
import FormattedDate from "@/components/FormattedDate.astro";
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
	note: CollectionEntry<"note"> | CollectionEntry<"noteEn">;
	isPreview?: boolean | undefined;
	locale?: "zh" | "en";
};

const { as: Tag = "div", note, isPreview = false, locale = "zh" } = Astro.props;
const { Content } = await render(note);
const notePath = locale === "en" ? `/en/notes/${note.id}/` : `/notes/${note.id}/`;
---

<article
	class:list={[
		isPreview && "inline-grid rounded border border-border px-4 py-3",
	]}
	data-pagefind-body={isPreview ? false : true}
>
	<Tag class="title" class:list={{ "text-base": isPreview }}>
		{
			isPreview ? (
				<a class="cactus-link" href={notePath}>
					{note.data.title}
				</a>
			) : (
				<>{note.data.title}</>
			)
		}
	</Tag>
	<FormattedDate
		class="font-display text-[10px] uppercase tracking-[0.2em] text-mutedFg"
		dateTimeOptions={{
			hour: "2-digit",
			minute: "2-digit",
			year: "numeric",
			month: "narrow",
			day: "2-digit",
		}}
		date={note.data.publishDate}
	/>
	<div
		class="prose prose-sm prose-cactus mt-4 max-w-none [&>p:last-of-type]:mb-0"
		class:list={{ "line-clamp-6": isPreview }}
	>
		<Content />
	</div>
</article>
