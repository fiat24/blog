---
import { siteConfig } from "@/site.config";
import { getLocaleFromPath, getMenuLinks } from "@/utils/i18n";

const year = new Date().getFullYear();
const currentPath = Astro.url.pathname;
const currentLocale = getLocaleFromPath(currentPath);
const menuLinks = getMenuLinks(currentLocale);
---

<footer class="mt-auto w-full pt-20 pb-4">
	<!-- Ornate divider above footer -->
	<div class="ornate-divider-full mb-8" aria-hidden="true"></div>

	<div class="flex w-full flex-col items-center justify-center gap-y-3 text-center sm:flex-row sm:justify-between">
		<div class="font-body text-sm text-mutedFg">
			&copy; {siteConfig.author} {year}
		</div>
		<nav
			aria-label="More on this site"
			class="flex gap-x-1 sm:gap-x-0 sm:divide-x sm:divide-border"
		>
			{
				menuLinks.map((link) => (
					<a
						class="px-3 py-2 font-display text-[10px] uppercase tracking-[0.2em] text-mutedFg transition-all duration-300 hover:text-accent hover:tracking-[0.25em] sm:py-0"
						href={link.path}
					>
						{link.title}
					</a>
				))
			}
		</nav>
	</div>
</footer>
